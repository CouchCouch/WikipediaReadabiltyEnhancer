{
  "manifest_version": 2,
  "name": "Wikipedia Readability Enhancer",
  "homepage_url": "https://github.com/CouchCouch/WikipediaReadabiltyEnhancer",
  "version": "1.2",
  "description": "Wikipedia's readability is lacking, this extension changes that.",

  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },

  "permissions": [
    "*://*.wikipedia.org/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["script.js"]
    }
  ]
}
